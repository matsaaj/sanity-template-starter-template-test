{
    "version": 2,
    "title": "Barebones Starter Template (test)",
    "description": "Attempt at creating a Sanity starter with Next.js, deployed to Vercel.",
    "technologies": [
        {
            "id": "vercel",
            "name": "Vercel",
            "url": "https://vercel.com/"
        },
        {
            "id": "nextjs",
            "name": "Next.js",
            "url": "https://nextjs.org"
        }
    ],
    "deployment": {
        "provider": "vercel",
		"sites": [
			{
				"id": "studio",
				"type": "studio",
				"title": "Sanity Studio",
				"description": "The Sanity Studio is where you edit and structure your content.",
				"dir": "./studio",
				"buildSettings": {
				  "base": "/studio",
				  "dir": "dist",
				  "cmd": "npm run build"
				}
			},
			{
				"id": "site",
				"type": "web",
				"title": "Title for the project here",
				"description": "Project description goes here",
				"dir": "./web",
				"buildSettings": {
				  "base": "/web",
				  "dir": "./build",
				  "cmd": "npm run build"
				}
			}
		],
        "envVars": {
            "projectId": ["NEXT_PUBLIC_SANITY_PROJECT_ID"],
            "dataset": ["NEXT_PUBLIC_SANITY_DATASET"]
        },
        "corsOrigins": [
            {
                "origin": "http://localhost:3000",
                "allowCredentials": true
            }
        ]
    }
}